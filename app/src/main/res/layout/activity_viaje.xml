<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fondomapa"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lytContenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="CompartÃ­ tu viaje!"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/field_destino"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destino"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/field_salida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/field_title"
                    android:hint="Salida"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <include
                layout="@layout/activity_pickers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/white"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/textEquipaje"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="Equipaje"
                    android:text="Equipaje" />
                <Spinner
                    android:id="@+id/spinner_equipaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lugar equipaje" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/white"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textLugaresDisp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:hint="Lugares disponibles"
                    android:text="Lugares disponibles" />

                <Spinner
                    android:id="@+id/spinner_pasajeros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lugares disponibles"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Direccion" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp">
                <EditText
                    android:id="@+id/field_info_adicional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Informacion adicional"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:scrollHorizontally="false" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/submit_post"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="bottom|center"
                android:text=" Ofrecer viaje " />

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</android.support.v4.widget.DrawerLayout>

