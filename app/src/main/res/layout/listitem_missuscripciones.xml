<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_suscripcion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="10dp"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text=" DESDE"
            android:textStyle="bold"
            android:drawableLeft="@drawable/icono_desde"
            android:gravity="start"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/lblOrigen"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:id="@+id/layout_suscripcion3"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icono_hasta"
            android:textStyle="bold"
            android:text=" HASTA"
            android:layout_marginLeft="10dp"/>
        <TextView android:id="@+id/lblDestino"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion4"
        android:layout_marginLeft="12dp"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icono_hasta"
            android:text=" DIRECCION DE SALIDA"
            style="@style/icono_lista_letra"/>

        <EditText android:id="@+id/lblDireccion"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/negro"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:enabled="false"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion5"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView android:id="@+id/lblFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icono_fecha"
            android:layout_marginRight="10dp"
            android:layout_marginHorizontal="10dp"/>
        <TextView android:id="@+id/lblHora"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icono_reloj"
            android:layout_gravity="right"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion6"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblLugares"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/silla_auto"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion7"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblConductor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/usuario"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_suscripcion8"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblTelefono"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="5dp"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/icono_tel"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:id="@+id/layout_suscripcion9"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblInformacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icono_info"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_ver_mas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icono_flecha"/>

    <Button
        android:id="@+id/btn_desuscribir"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="55dp"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_marginVertical="5dp"
        android:background="@color/rojo"
        android:text="Dar de baja"/>
</LinearLayout>
