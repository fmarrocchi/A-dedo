<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogo_tel"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:layout_marginVertical="20dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.DialogWindowTitle.AppCompat"
        android:textColor="@color/colorPrimaryDark"
        android:text="Número de teléfono" />

        <TextView
            android:id="@+id/mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Ingresá tu número de teléfono para poder contactarte con viajeros y que ellos puedan contactarse con vos." />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColorHint="@color/colorPrimaryDark">

        <EditText
            android:id="@+id/text_telefono"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Teléfono"
            android:inputType="phone"
            android:paddingStart="5dp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>

</RelativeLayout>